{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./global.d.ts",
      "./src/core/pscript.g.ts",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "lib": [
      "es2022",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
